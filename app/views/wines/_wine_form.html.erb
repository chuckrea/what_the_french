<div class="new-wine-form">
<h2>Create a new wine</h2>

<%= form_for @wine do |f| %>
  <%= f.label :vintage, "", class: "wine-form-label" %>
  <%= f.text_field :vintage, class: "wine-form form-control"%>
  <%= f.label :name, "", class: "wine-form-label" %>
  <%= f.text_field :name, class: "wine-form form-control"%> <!-- to style the form -->
  <%= f.label :winery, "", class: "wine-form-label" %>
  <%= f.text_field :winery, class: "wine-form form-control"%>
  <%= f.label :varietal, "", class: "wine-form-label" %>
  <%= f.text_field :varietal, class: "wine-form form-control"%>
  <%= f.label :image_url, "", class: "wine-form-label" %>
  <%= f.text_field :image_url, class: "wine-form form-control"%>
  <%= f.submit nil, class: "wine-form-button btn btn-default", id:"submit" %> <!-- to style the button -->
<% end %>
</div>