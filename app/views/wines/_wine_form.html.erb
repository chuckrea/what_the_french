<%= form_for @wine do |f| %>
  <%= f.label :vintage, "", class: "wine-form-label" %>
  <%= f.text_field :vintage, class: "wine-form form-control"%>
  <%= f.label :name, "", class: "wine-form-label" %>
  <%= f.text_field :name, class: "wine-form form-control"%> <!-- to style the form -->
  <%= f.submit nil, class: "wine-form-button btn btn-default", id:"submit" %> <!-- to style the button -->
<% end %>