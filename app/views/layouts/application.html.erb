    <a class="navbar-brand" href="<%= root_path %>">Wine-O</a>
  </div>

  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <% if collector_signed_in? %>
      <ul class="nav navbar-nav">
      <li><%= link_to "Back", :back %></li>
    </ul>
      <ul class="nav navbar-nav navbar-right">
      <li><button type="button" class="btn btn-default navbar-btn btn-link"><%= link_to "Sign Out", destroy_collector_session_path, method: :delete %></button></li>
    </ul>
      <% else %>
      <ul class="nav navbar-nav">
      <li><a href="<%= new_collector_registration_path %>">Sign Up</a></li>
      <li><a href="<%= new_collector_session_path %>">Sign In</a></li>
      </ul>
      <% end %>
  </div>
</nav>
