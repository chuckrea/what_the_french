<div class="wtf col-md-9 col-md-offset-2">
  <h2>What The French?</h2>
  <h3>Because they don't put the effing grape on the label</h3>
  <% unless @result %>
  <form class="form-inline" role="form" action="<%= wtf_path %>" method="get">
    <div class="form-group col-lg-6">
    <input type="text" class="form-control input-large search-query" name="search" placeholder="enter weird French region or appelation name">
    </div>
    <div class="form-group">
    <select class= "form-control" name="color">
      <option value="red">Red</option>
      <option value="white">White</option>
    </select>
    </div>
    <div class="form-group">
    <input type="submit" class="btn btn-danger" value="What The French?">
  </div>
  </form>
  <% else %>
    <h3><%= @appelation %> <%= @joke %></h3>
    <h3><%= @result %><h3>
    <div class="row">
      <div class="col-md-2">
    <a href="<%= wtf_path %>" type="button" class="btn btn-danger btn-block">WTF again</a>
      </div>
      <div class="col-md-2">
    <a href="<%= root_path %>" type="button" class="btn btn-success btn-block">Home</a>
  </div>
</div>
  <% end %>

</div>